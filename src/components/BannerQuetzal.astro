---
// Componente del Banner Principal con Quetzal Animado
import logoQuetzal from '../assets/logo_lenguaje_quetzal.png';
---

<div class="banner-principal-quetzal">
  <div class="contenedor-banner">
    <!-- Logo del Quetzal -->
    <div class="quetzal-volador">
      <img src={logoQuetzal.src} alt="Logo Quetzal" class="quetzal-logo" />
    </div>
    
    <!-- Contenido del banner -->
    <div class="contenido-banner">
      <h1 class="titulo-principal">
        <span class="lenguaje-texto">Lenguaje</span>
        <span class="quetzal-texto">Quetzal</span>
      </h1>
      <p class="subtitulo">Programación funcional en español</p>
      <div class="version-badge">
        <span class="version-texto">v0.0.1</span>
      </div>
      
      <!-- Línea de código animada -->
      <div class="codigo-animado">
        <span class="prompt">❯</span>
        <span class="comando typing-animation">imprimir_exito("¡Hola mundo desde Quetzal!")</span>
      </div>
    </div>
    
    <!-- Partículas de fondo -->
    <div class="particulas-fondo">
      <div class="particula" style="left: 10%; animation-delay: 0s;"></div>
      <div class="particula" style="left: 20%; animation-delay: 0.5s;"></div>
      <div class="particula" style="left: 30%; animation-delay: 1s;"></div>
      <div class="particula" style="left: 40%; animation-delay: 1.5s;"></div>
      <div class="particula" style="left: 50%; animation-delay: 2s;"></div>
      <div class="particula" style="left: 60%; animation-delay: 2.5s;"></div>
      <div class="particula" style="left: 70%; animation-delay: 3s;"></div>
      <div class="particula" style="left: 80%; animation-delay: 3.5s;"></div>
      <div class="particula" style="left: 90%; animation-delay: 4s;"></div>
    </div>
  </div>
</div>

<style>
  .banner-principal-quetzal {
    background: linear-gradient(135deg, #2d8a73 0%, #359c85 50%, #1a365d 100%);
    position: relative;
    padding: 4rem 2rem;
    border-radius: 1rem;
    margin: 2rem 0;
    color: white;
    overflow: hidden;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .contenedor-banner {
    display: flex;
    align-items: center;
    gap: 3rem;
    max-width: 1200px;
    width: 100%;
    position: relative;
    z-index: 2;
  }
  
  .quetzal-volador {
    flex-shrink: 0;
    animation: volar-suave 6s ease-in-out infinite;
  }
  
  .quetzal-logo {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }
  
  /* Animaciones del Quetzal */
  @keyframes volar-suave {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    25% {
      transform: translateY(-15px) rotate(3deg);
    }
    50% {
      transform: translateY(-8px) rotate(0deg);
    }
    75% {
      transform: translateY(-20px) rotate(-3deg);
    }
  }
  
  /* Contenido del banner */
  .contenido-banner {
    flex: 1;
    text-align: left;
  }
  
  .titulo-principal {
    font-size: 3.5rem;
    font-weight: 800;
    margin: 0 0 1rem 0;
    line-height: 1.1;
  }
  
  .lenguaje-texto {
    display: block;
    color: #ffffff;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  .quetzal-texto {
    display: block;
    background: linear-gradient(45deg, #fbbf24, #f59e0b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: none;
    animation: brillo-titulo 3s ease-in-out infinite;
  }
  
  @keyframes brillo-titulo {
    0%, 100% {
      filter: brightness(1);
    }
    50% {
      filter: brightness(1.2);
    }
  }
  
  .subtitulo {
    font-size: 1.5rem;
    opacity: 0.9;
    margin: 0 0 2rem 0;
    font-weight: 300;
  }
  
  .version-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    margin-bottom: 2rem;
  }
  
  .version-texto {
    font-weight: 600;
    font-size: 0.9rem;
  }
  
  /* Código animado */
  .codigo-animado {
    background: rgba(26, 54, 93, 0.7);
    backdrop-filter: blur(10px);
    padding: 1rem 1.5rem;
    border-radius: 0.5rem;
    font-family: 'Courier New', monospace;
    border: 1px solid rgba(255, 255, 255, 0.2);
    margin-top: 1rem;
  }
  
  .prompt {
    color: #4ade80;
    margin-right: 0.5rem;
  }
  
  .comando {
    color: #ffffff;
  }
  
  .typing-animation {
    border-right: 2px solid #4ade80;
    animation: parpadear-cursor 1s infinite;
  }
  
  @keyframes parpadear-cursor {
    0%, 50% {
      border-color: #4ade80;
    }
    51%, 100% {
      border-color: transparent;
    }
  }
  
  /* Partículas de fondo */
  .particulas-fondo {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }
  
  .particula {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    animation: flotar-particula 8s linear infinite;
  }
  
  @keyframes flotar-particula {
    0% {
      top: 100%;
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      top: -10%;
      opacity: 0;
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .contenedor-banner {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }
    
    .titulo-principal {
      font-size: 2.5rem;
    }
    
    .subtitulo {
      font-size: 1.2rem;
    }
    
    .quetzal-svg {
      width: 120px;
      height: 120px;
    }
    
    .quetzal-logo {
      width: 120px;
      height: 120px;
    }
    
    .banner-principal-quetzal {
      padding: 3rem 1rem;
      min-height: 350px;
    }
  }
  
  @media (max-width: 480px) {
    .titulo-principal {
      font-size: 2rem;
    }
    
    .subtitulo {
      font-size: 1rem;
    }
    
    .codigo-animado {
      font-size: 0.8rem;
      padding: 0.8rem 1rem;
    }
  }
</style>
