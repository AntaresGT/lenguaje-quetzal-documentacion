{
  "id": "quetzal",
  "name": "Quetzal",
  "scopeName": "source.quetzal",
  "fileTypes": ["qz"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#types"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#objects"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.quetzal",
          "match": "//.*$"
        },
        {
          "name": "comment.block.quetzal",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.quetzal"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.quetzal",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.quetzal",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.quetzal",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.quetzal",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.quetzal",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.quetzal",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.quetzal",
          "match": "\\b(si|sino|mientras|para|hacer|romper|continuar|retornar|en|cada)\\b"
        },
        {
          "name": "keyword.other.quetzal",
          "match": "\\b(importar|exportar|desde|como|nuevo|ambiente|libre|de|es)\\b"
        },
        {
          "name": "keyword.async.quetzal",
          "match": "\\b(asincrono|esperar)\\b"
        },
        {
          "name": "keyword.exception.quetzal",
          "match": "\\b(intentar|capturar|atrapar|finalmente|lanzar|excepcion|excepción)\\b"
        },
        {
          "name": "storage.modifier.quetzal",
          "match": "\\b(var|mut|publico|privado)\\b"
        },
        {
          "name": "storage.type.function.quetzal",
          "match": "\\b(fn)\\b"
        },
        {
          "name": "storage.type.class.quetzal",
          "match": "\\b(objeto|constructor)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.quetzal",
          "match": "\\b(vacio|entero|número|numero|texto|cadena|log|bool|lista|jsn|tipo)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.class.builtin.quetzal",
          "match": "\\b(consola|Matematica|Sistema|Archivo)\\b"
        },
        {
          "name": "support.function.builtin.quetzal",
          "match": "\\b(imprimir|imprimir_error|imprimir_advertencia|imprimir_informacion|imprimir_exito|imprimir_alerta|imprimir_confirmacion|imprimir_depurar)\\b"
        },
        {
          "name": "support.function.method.quetzal",
          "match": "\\.(mostrar|mostrar_error|mostrar_advertencia|mostrar_informacion|mostrar_exito|leer|agregar|eliminar|obtener|ordenar|invertir|longitud|contiene|buscar|reemplazar|dividir|unir|mayusculas|minusculas|recortar|texto|entero|numero|número|jsn|log)(?=\\()"
        },
        {
          "name": "support.function.conversion.quetzal",
          "match": "\\.(numero|número|entero|texto|cadena|log|bool|lista|jsn)\\(\\)"
        },
        {
          "name": "entity.name.function.quetzal",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.quetzal",
          "match": "\\b(y|o|no)\\b|&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.comparison.quetzal",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.quetzal",
          "match": "\\+=|-=|\\*=|/=|%=|="
        },
        {
          "name": "keyword.operator.arithmetic.quetzal",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.ternary.quetzal",
          "match": "\\?|:"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.quetzal",
          "match": "\\b(verdadero)\\b"
        },
        {
          "name": "constant.language.boolean.false.quetzal",
          "match": "\\b(falso)\\b"
        },
        {
          "name": "constant.language.null.quetzal",
          "match": "\\b(nulo)\\b"
        }
      ]
    },
    "objects": {
      "patterns": [
        {
          "name": "entity.name.type.class.quetzal",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.property.quetzal",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=:)"
        }
      ]
    }
  }
}
